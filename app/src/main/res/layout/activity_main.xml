<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ready_to_go"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/lblFeedback" android:textSize="30sp"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.318"/>
    <Button
            android:text="@string/guess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnGuess"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="162dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="152dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/numGuess"
            android:layout_marginBottom="38dp"
            app:layout_constraintBottom_toTopOf="@+id/btnGuess" android:layout_marginTop="188dp"
            app:layout_constraintTop_toBottomOf="@+id/lblFeedback" android:layout_marginEnd="99dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="99dp" android:importantForAutofill="no" android:labelFor="@id/btnGuess"

            android:hint="@string/enter_your_guess"/>

</androidx.constraintlayout.widget.ConstraintLayout>